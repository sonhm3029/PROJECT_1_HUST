<!-- [ breadcrumb ] start -->
<div class="page-header">
  <div class="page-block">
    <div class="row align-items-center">
      <div class="col-md-12">
        <div class="page-header-title">
          <h5>Dữ liệu ra vào lab</h5>
        </div>
        <ul class="breadcrumb">
          <li class="breadcrumb-item"><a href="/dashboard"><i
                class="feather icon-home"
              ></i></a></li>
          <li class="breadcrumb-item"><a href="#!">Analytics</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
<!-- [ breadcrumb ] end -->
<!-- [ Main Content ] start -->
<div class="data-visualize__wrapper">
  <div class="data-visualize-header__wrapper">
    <div class="header-filer bg-white p-3">
      <form class="row">
        <div class="col-lg-3 col-md-3 col-sm-4 col-xs-6">
          <div class="form-group">
            <label for="members-selection">Chọn thành viên</label>
            <select
              class="form-control"
              id="members-selection"
              name="member"
              value=""
            >
              <option>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
            </select>
          </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-4 col-xs-6">
          <div class="form-group">
            <label for="date-filter">Chọn lọc theo ngày</label>
            <input type="date" class="form-control" name="date" value={{currentChoseDate}} max={{today}} min="2022-07-20" />
          </div>
        </div>

        <div class="col-lg-3 col-md-3 col-sm-4 col-xs-6">
          <div class="form-group">
            <label style="margin-bottom:0px;"></label>
            <button type="submit" class="btn btn-primary form-control mt-2"><i
                class="fas fa-filter"
              ></i>Lọc</button>
          </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-4 col-xs-6">
          <div class="form-group">
            <label style="margin-bottom:0px;"></label>
            <button type="button" class="btn btn-success form-control mt-2"><i
                class="fas fa-file-excel"
              ></i>Xuất file json</button>
          </div>
        </div>
      </form>
    </div>
  </div>
  <div class="data-visualize-body__wrapper p-3 bg-white">
    <div id="in-out-chart-all" style="width:100%;height:400px;">

    </div>
  </div>
  <div class="detail-info-from-chart p-3 bg-white mt-3">
    <div class="row">
      <div class="col-lg-3 col-md-3">
        <button
          class="btn btn-primary"
          data-toggle="collapse"
          href="#collapseContenDetail"
          role="button"
          aria-expanded="false"
          aria-controls="collapseContent"
        >Xem chi tiết dữ liệu</button>
      </div>
    </div>
    <div class="collapse mt-3" id="collapseContenDetail">
      <div class="card card-body">
        {{#each detailData}}
          <p><span>{{this.timePoint}} :</span> {{this.objectDetect}} </p>
        {{/each}}
      </div>
    </div>
  </div>
</div>
<script src="/js/charts/index.js"></script>
<script>
  let todayLineChartData ={{{todayLineChartData}}}; 
  let currentChoseDate = {{{currentChoseDate}}}
  initLineChart(todayLineChartData,document.getElementById("in-out-chart-all"), `Biểu đồ thống kê lượt ra vào lab trong ngày ${currentChoseDate}`);
</script>